{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["./.nuxt/dist/sitemap-routes.json"],
        "generateStaticRoutes": true
      }
    }
  ],
  "headers": [
    {
      "source": "/news(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=43200, stale-while-revalidate"
        }
      ]
    }
  ]
}